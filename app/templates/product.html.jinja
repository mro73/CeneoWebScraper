{% extends "base.html.jinja" %}
{% block title %}
Opinie o produkcie
{% endblock title %}
{% block content %}
<p>To jest strona produktu {{product_id}}.</p>
<table class="table table-striped table-hover table-bordered table-sm">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Ocena</th>
      <th scope="col">Rekomendacja</th>
      <th scope="col">Opinia</th>
      <th scope="col">Zalety</th>
      <th scope="col">Wady</th>
    </tr>
  </thead>
  <tbody>
    {% for opinion in opinions %}
      <tr>
        <th scope="row">{{opinion.opinion_id}}</th>
        <td>{{opinion.stars}}</td>
        <td>{{opinion.recommendation}}</td>
        <td>{{opinion.content}}</td>
        <td>{{opinion.pros}}</td>
        <td>{{opinion.cons}}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock content %}